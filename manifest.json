{
    "name": "Infobox",
    "description": "Select text, get info.",
    "version": "1.0",
    "manifest_version": 3,
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"],
            "css": ["infobox.css"]
        }
    ],
    "web_accessible_resources": [
        {
          "resources": [ "lightbulbInfobox.png" ],
          "matches": [ "<all_urls>" ]
        }
    ],
    "host_permissions": ["<all_urls>"],
    "action": {
        "default_title": "InfoBox",
        "default_icon": {
            "16": "/images/lightbulbInfobox.png",
            "32": "/images/lightbulbInfobox.png",
            "48": "/images/lightbulbInfobox.png",
            "128": "/images/lightbulbInfobox.png"
        }
    },
    "icons": {
        "16": "/images/lightbulbInfobox.png",
        "32": "/images/lightbulbInfobox.png",
        "48": "/images/lightbulbInfobox.png",
        "128": "/images/lightbulbInfobox.png"
    },
    "permissions": [
        "storage"
    ]
}